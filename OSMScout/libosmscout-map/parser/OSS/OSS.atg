                      SemErr(e.c_str());
                    }
                    else if (dynamic_cast<StyleVariableMag*>(variable.Get())==NULL) {
                      std::string e="Variable is not of type 'MAG'";

                      SemErr(e.c_str());
                    }

                    if (!errors->hasErrors) {
                      StyleVariableMag* magVariable=dynamic_cast<StyleVariableMag*>(variable.Get());

                      magnification=magVariable->GetMag();
                    }
                  .)
               .

